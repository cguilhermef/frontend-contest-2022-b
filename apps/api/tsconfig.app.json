{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "target": "es2015"
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
